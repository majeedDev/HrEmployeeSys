
<div class="container">
<h1 class="text-center mt-3" style="color:395B64;"><%= t('gModles.Divisions')%></h1>
 <a href="/" class="mt-5">&#8592; <%= t('globals.buttons.back to home')%> </a>



<a href="/divisions/new">
<span style="font-size: 48px; color: CadetBlue;" class="d-block mt-3 mb-3">
<i class="fas fa-plus-circle"></i>
</span>
</a>

   <table class="table table-hover">
    <thead class="table-info">
      <tr>
       <th style="background-color:6998AB; color:F5F5F5;"> <%= t('inPages.Divisions.forms.id')%> </th>
        <th style="background-color:6998AB; color:F5F5F5;"> <%= t('inPages.Divisions.forms.name')%> </th>
        <th style="background-color:6998AB; color:F5F5F5;"> <%= t('inPages.Divisions.forms.description')%> </th>
        <th style="background-color:6998AB; color:F5F5F5;"> <%= t('inPages.Divisions.forms.teams')%> </th>
        <th style="background-color:6998AB; color:F5F5F5;"> <%= t('inPages.Divisions.forms.manager')%> </th>
        <th style="background-color:6998AB; color:F5F5F5;"></th>
        <th style="background-color:6998AB; color:F5F5F5;"></th>
      </tr>
    </thead>
    <tbody>
     <% @divisions.each do |division| %>
      <tr>
        <td># <%=division.id%></td>
        <td><%=division.name%></td>
        <td><%=division.description%></td>
        <td><%= division.teams.collect(&:name).join(',') %></td>

        <td><%=division.employee_id%></td>
        <td><%= link_to t('inPages.Divisions.buttons.edit division'), edit_division_path(division) , :class => "btn btn-warning"%></td>
        <td><%= link_to t('inPages.Divisions.buttons.destroy division'), division, :class => "btn btn-danger", :confirm => 'Are you sure?', :method => :delete %></td>


      </tr>
    <% end %>
    </tbody>
  </table>
 

</div>