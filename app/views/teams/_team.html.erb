<div id="<%= dom_id team %>">
  <p>
    <strong><%= t('inPages.Teams.forms.name')%>:</strong>
    <%= team.name %>
  </p>

  <p>
    <strong><%= t('inPages.Teams.forms.description')%>:</strong>
    <%= team.description %>
  </p>

  <p>
    <strong><%= t('inPages.Teams.forms.leader')%>:</strong>
    <%= team.leader_id %>
    <%= Employee.find_by(id: team.leader_id).name %>
  </p>
  <p>
    <strong><%= t('inPages.Teams.forms.members')%>:</strong>
    <%= team.employees.where.not(id: team.leader_id).collect(&:name).join(',') %>
  </p>

</div>
