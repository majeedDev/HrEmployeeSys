<div id="<%= dom_id team %>">
  <p>
    <strong>Name:</strong>
    <%= team.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= team.description %>
  </p>

  <p>
    <strong>Leader:</strong>
    <%= team.leader_id %>
    <%= Employee.find_by(id: team.leader_id).name %>
  </p>
  <p>
    <strong>Members:</strong>
    <%= team.employees.where.not(id: team.leader_id).collect(&:name).join(',') %>
  </p>

</div>
