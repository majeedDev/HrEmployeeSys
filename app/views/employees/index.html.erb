<div class="container">
<h1 class="text-center mt-3" style="color:395B64;"><%= t('gModles.Employees') %></h1>
 <a href="/" class="mt-5">&#8592; <%= t('globals.buttons.back to home') %></a>



<a href="/employees/new">
<span style="font-size: 48px; color: CadetBlue;" class="d-block mt-3 mb-3">
<i class="fas fa-plus-circle"></i>
</span>
</a>

   <table class="table table-hover">
    <thead class="table-info">
      <tr>
       <th> <%= t('inPages.Employees.forms.id')%> </th>
        <th> <%= t('inPages.Employees.forms.name')%> </th>
        <th> <%= t('inPages.Employees.forms.email')%> </th>
        <th> <%= t('inPages.Employees.forms.job')%> </th>
        <th> <%= t('inPages.Employees.forms.salary')%> </th>
        <th> <%= t('inPages.Employees.forms.employment status')%> </th>
        <th ></th>
        <th ></th>
      </tr>
    </thead>
    <tbody>
     <% @employees.each do |employee| %>
      <tr>
        <td># <%=employee.id%></td>
        <td><%=employee.name%></td>
        <td><%=employee.email%></td>
        <td><%=employee.job%></td>
        <td><%=employee.salary%></td>
        <td><%=employee.employment_status%></td>
        <td> <a href="/employees/<%=employee.id%>/edit" class="btn" style="background-color:1572A1; color:white;"><%= t('inPages.Employees.buttons.edit employee')%></a></td>
         <td><a href="/employees/<%=employee.id%>" id="destroy" class="btn btn-danger"><%= t('inPages.Employees.buttons.destroy employee')%></a></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>