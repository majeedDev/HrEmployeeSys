<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= t('globals.messages.error message', count: team.errors.count) %></h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('inPages.Users.forms.picture', default: 'Personal Picture'), style: "display: block" %>
    <%= form.file_field :pic %>
  </div>

  <div>
    <%= form.label t('inPages.Users.forms.name', default: 'Name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('inPages.Users.forms.email', default: 'Email'), style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label t('inPages.Users.forms.password', default: 'Password'), style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
