<div class="container">
<h1 class="text-center mt-3" style="color:395B64;">Users</h1>
 <a href="/" class="mt-5">&#8592; Back to Home</a>



<a href="/users/new">
<span style="font-size: 48px; color: CadetBlue;" class="d-block mt-3 mb-3">
<i class="fas fa-plus-circle"></i>
</span>
</a>

   <table class="table table-hover">
    <thead class="table-info">
      <tr>
       <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
        
      </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %>
      <tr>
        <td># <%=user.id%></td>
        <td><%=user.name%></td>
        <td><%=user.email%></td>
        <td class="px-0"><%= link_to "Show", user_path(user), class: "btn btn-success" %></td>
        <td> <a href="/users/<%=user.id%>/edit" class="btn btn-info"  >Edit</a></td>
         <td><a href="/users/<%=user.id%>" id="destroy" class="btn btn-danger">Delete</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>